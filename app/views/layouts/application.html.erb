<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html 
     PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns="http://www.facebook.com/2008/fbml" xml:lang="en" lang="en">
  <head>
    <title>Rotten Potatoes!</title>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <%= javascript_include_tag :defaults %>
    <%= stylesheet_link_tag "general", :media => "screen, print" %>
  </head>
  <body>
    <%= fb_connect_javascript_tag %>
    <%= init_fb_connect 'XFBML' %>
    <div id="header_bar">
      <div id="header_title">
        <h1><%= link_to "Rotten Potatoes!", movies_path %></h1>
      </div>
      <%= render :partial => 'layouts/facebook_connect' %>
    </div>
    <div id="body">
      <% if flash[:notice] %>
        <div id="flash_notice"><%= flash[:notice] %></div>
      <% elsif flash[:error] %>
        <div id="flash_error"><%= flash[:error] %></div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
